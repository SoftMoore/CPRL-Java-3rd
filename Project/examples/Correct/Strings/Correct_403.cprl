type Name = string[20];

proc main()
  {
    var firstName : Name := "John";

    writeln "Hello, ", firstName, ".";

    write "Hello, ";
    writeName(firstName);
    writeln ".";
  }

proc writeName(n : Name)
  {
    var i : Integer;
    i := 0;
    while i < 4 loop
      {
        write n[i];
        i := i + 1;
      }
  }

